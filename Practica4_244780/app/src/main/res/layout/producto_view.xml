<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/producto_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/caramelfrap"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="50dp"
    />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/producto_nombre"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/letraproducto"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caramel Frappe"
            android:layout_marginTop="50dp"

            />

        <TextView
            android:id="@+id/producto_desc"
            android:textSize="8sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/descripciom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="descripcion del producto" />

    </LinearLayout>

    <TextView
        android:id="@+id/producto_precio"
        android:textSize="19sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/precio"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="match_parent"
        android:text="$5.00"
        />



</LinearLayout>